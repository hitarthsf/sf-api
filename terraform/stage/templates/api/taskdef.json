{
  "executionRoleArn": "${execution_role_arn}",
  "containerDefinitions": [
    {
      "name": "node",
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "${awslogs_group}",
          "awslogs-region": "${awslogs_region}",
          "awslogs-stream-prefix": "node"
        }
      },
      "portMappings": [
        {
          "hostPort": 5000,
          "protocol": "tcp",
          "containerPort": 5000
        }
      ],
      "environment": [
        {
          "name": "AWS_REGION",
          "value": "${aws_region}"
        }
      ],
      "secrets": [
        {
          "name": "SECRET_KEY_BASE",
          "valueFrom": "${secret_key_base_param_arn}"
        },
        {
          "name": "DATABASE_URL",
          "valueFrom": "${database_url_param_arn}"
        },
        {
          "name": "ASSET_BUCKET",
          "valueFrom": "${asset_bucket_param_arn}"
        },
        {
          "name": "ASSET_HOST",
          "valueFrom": "${asset_host_param_arn}"
        }
      ],
      "healthCheck": {
        "command": ["CMD-SHELL", "curl -f localhost:5000/ || exit 1"],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 15
      },
      "image": "<IMAGE1_NAME>",
      "essential": true
    }
  ],
  "memory": "${memory}",
  "taskRoleArn": "${task_role_arn}",
  "family": "${family}",
  "requiresCompatibilities": ["FARGATE"],
  "networkMode": "awsvpc",
  "cpu": "${cpu}"
}
